<%= form_for [@tournament, @invite], :html => {:class => 'form-horizontal'} do |f| %>
  <div class="well">
    <h3><%= @tournament.name %></h3>
    <p><%= t '.invited_to', :name => @tournament.name %></p>
    <div class="control-group">
      <div class="controls">
        <%= f.submit :class => 'btn btn-primary' %>
        <%= cancel_link root_path %>
      </div>
    </div>
  </div>
<% end %>
